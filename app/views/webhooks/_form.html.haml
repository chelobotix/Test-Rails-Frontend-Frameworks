-# frozen_string_literal: true
= simple_form_for(@webhook) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :source
    = f.input :data
    = f.input :message
    = f.input :event

  .form-actions
    = f.button :submit
